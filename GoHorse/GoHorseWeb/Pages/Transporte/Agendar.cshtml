@page
@model GoHorseWeb.Pages.Viagens.CreateModel

@{
    ViewData["Title"] = "Agendar Viagem";
}

<h1>Agendar Viagem</h1>

<h4>Agendar Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Viagem.DataOrigem" class="control-label"></label>
                <input asp-for="Viagem.DataOrigem" class="form-control" />
                <span asp-validation-for="Viagem.DataOrigem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Viagem.DataDestino" class="control-label"></label>
                <input asp-for="Viagem.DataDestino" class="form-control" />
                <span asp-validation-for="Viagem.DataDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Viagem.ValorViagem" class="control-label"></label>
                <input asp-for="Viagem.ValorViagem" class="form-control" />
                <span asp-validation-for="Viagem.ValorViagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Viagem.Status" class="control-label"></label>
                <input asp-for="Viagem.Status" class="form-control" />
                <span asp-validation-for="Viagem.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="VeiculoId">Veiculo</label>
                <select asp-for="VeiculoId" asp-items="Model.Veiculos" class="custom-select">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="AnimalId">Animal</label>
                <select asp-for="AnimalId" asp-items="Model.Animais" class="custom-select">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="EnderecoOrigemId">EnderecoOrigem</label>
                <select asp-for="EnderecoOrigemId" asp-items="Model.EnderecosOrigem" class="custom-select">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="EnderecoDestinoId">EnderecoDestino</label>
                <select asp-for="EnderecoDestinoId" asp-items="Model.EnderecosDestino" class="custom-select">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
