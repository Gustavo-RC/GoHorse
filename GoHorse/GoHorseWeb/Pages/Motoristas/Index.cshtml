@page
@model GoHorseWeb.Pages.Motoristas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].NRegistroCnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].ValidadeCnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].CategoriaCnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].Cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista[0].Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Motorista)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NRegistroCnh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidadeCnh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaCnh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>